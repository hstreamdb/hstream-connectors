{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "sink-postgresql",
  "description": "the configuration specification of sink-postgresql",
  "type": "object",
  "properties": {
    "stream": {
      "description": "source HStream stream name",
      "type": "string",
      "required": true
    },
    "host": {
      "description": "postgresql hostname",
      "type": "string",
      "required": true
    },
    "port": {
      "description": "postgresql port",
      "type": "integer",
      "default": 5432,
      "required": true
    },
    "user": {
      "description": "postgresql user",
      "type": "string",
      "required": true
    },
    "password": {
      "description": "postgresql password",
      "type": "string",
      "required": true
    },
    "database": {
      "description": "target database name",
      "type": "string",
      "required": true
    },
    "table": {
      "description": "table name of the database",
      "type": "string",
      "required": true
    }
  },
  "ui:order": [ "stream", "host", "port", "user", "password", "database", "table" ]
}
